{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TileComponent",
  "type": "object",
  "javaType": "dx.schema.types.TileComponent",
  "properties": {
    "tileId": {
      "type": "string",
      "description": "id that uniquely identifies this tile"
    },
    "displayPos": {
      "$ref": "Vector2I.schema.json"
    },
    "tileColorIndex": {
      "description": "index of the corresponding tile color, configured in the LayoutTheme",
      "type": "integer"
    }
  },
  "required": ["tileId", "displayPos", "tileColorIndex"]
}
